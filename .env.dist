# Scientific RAG - Environment Configuration Template
# Copy this file to .env and fill in your values

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional, for Qdrant Cloud
QDRANT_COLLECTION_NAME=scientific_papers

# Embeddings
EMBEDDING_MODEL_NAME=intfloat/e5-small-v2
EMBEDDING_DEVICE=cpu  # or "cuda" for GPU

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval
RETRIEVAL_TOP_K=10
BM25_WEIGHT=0.5
DENSE_WEIGHT=0.5

# Reranking
RERANKER_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L6-v2
RERANK_TOP_K=5

# LLM Configuration
LLM_PROVIDER=openrouter
LLM_MODEL=openai/gpt-oss-120b:free
LLM_API_KEY=  # Required
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# Dataset
DATASET_NAME=armanc/scientific_papers
DATASET_SPLIT=arxiv  # arxiv, pubmed
DATASET_CACHE_DIR=data/raw
DATASET_SAMPLE_SIZE=  # Optional: limit for testing (e.g., 1000)
